{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
